  position: absolute;
  top: 65%;
}

.judgeRight {
  width: 330rpx;
  background-color: #3bac6a;
  color: #fff;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  border-top-right-radius: 1rpx;
  border-bottom-right-radius: 1rpx;
  font-size: 40rpx;
}

.judgeWrong {
  width: 330rpx;
  /* 背景颜色 */
  background-color: #3bac6a;
  /* 颜色 */
  color: #fff;
  /* 边框弧度 */
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  border-top-left-radius: 1rpx;
  border-bottom-left-radius: 1rpx;
  /* 文本 */
  font-size: 40rpx;
}
